{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Appetit",
	"patterns": [
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#statacts"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#other"
		}
	],
	"repository": {
		"numbers": {
			"patterns": [
				{
					"match": "-?\\d+",
					"name": "constant.numeric.appetit"
				}
			]
		},
		"comments": {
			"name": "comment.line.appetit",
			"begin": "-[^>]",
			"end": "\\n"
		},
		"statacts": {
			"patterns": [
				{
					"name": "support.class.appetit",
					"match": "\\b(to)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.appetit",
					"match": "\\b(ask|copydirectory|copyfile|download|deletedirectory|deletefile|execute|exit|minver|makefile|makedirectory|movedirectory|movefile|pause|set|write|writeln|zipdirectory|zipfile)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.appetit",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.appetit",
					"match": "\\\\."
				}
			]
		},
		"other": {
			"patterns": [
				{
					"name": "variable.parameter.appetit",
					"match": "^#!(.*)$"
				}
			]
		}
	},
	"scopeName": "source.appetit"
}